<Window x:Class="Certiflyte.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Certiflyte" Height="450" Width="800"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" WindowStartupLocation="CenterScreen"
        Topmost="True">

    <Window.Resources>
        <!-- 🌟 Bokeh Floating Animation -->
        <Storyboard x:Key="BokehAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Bokeh1_Transform"
                             Storyboard.TargetProperty="X"
                             From="0" To="700" Duration="0:0:15" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Bokeh1_Transform"
                             Storyboard.TargetProperty="Y"
                             From="0" To="400" Duration="0:0:10" AutoReverse="True"/>

            <DoubleAnimation Storyboard.TargetName="Bokeh2_Transform"
                             Storyboard.TargetProperty="X"
                             From="200" To="600" Duration="0:0:45" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Bokeh2_Transform"
                             Storyboard.TargetProperty="Y"
                             From="100" To="450" Duration="0:0:7" AutoReverse="True"/>

            <DoubleAnimation Storyboard.TargetName="Bokeh3_Transform"
                             Storyboard.TargetProperty="X"
                             From="500" To="50" Duration="0:0:11" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Bokeh3_Transform"
                             Storyboard.TargetProperty="Y"
                             From="250" To="50" Duration="0:0:8" AutoReverse="True"/>
        </Storyboard>

        <!-- 🌟 Moving Gradient Effect for Logo -->
        <LinearGradientBrush x:Key="MovingGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="Cyan" Offset="0"/>
            <GradientStop Color="White" Offset="0.5"/>
            <GradientStop Color="Aquamarine" Offset="1"/>
        </LinearGradientBrush>

        <Storyboard x:Key="MovingGradientAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="GradientStop1"
                             Storyboard.TargetProperty="Offset"
                             From="0" To="1" Duration="0:0:3" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="GradientStop2"
                             Storyboard.TargetProperty="Offset"
                             From="0.5" To="1.5" Duration="0:0:3" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="GradientStop3"
                             Storyboard.TargetProperty="Offset"
                             From="1" To="2" Duration="0:0:3" AutoReverse="True"/>
        </Storyboard>

        <!-- 🌟 Progress Bar Animation -->
        <Storyboard x:Key="ProgressBarAnimation">
            <DoubleAnimation Storyboard.TargetName="LoadingBarFill"
                             Storyboard.TargetProperty="Width"
                             From="0" To="760" Duration="0:0:5" />
        </Storyboard>
    </Window.Resources>

    <Grid Background="Black">
        <!-- FRACTAL BACKGROUND -->
        <Canvas>
            <Rectangle Width="800" Height="450">
                <Rectangle.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1" RadiusY="1">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </RadialGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Canvas>

        <!-- 🌟 ANIMATED BOKEH EFFECT -->
        <Canvas x:Name="BokehCanvas">
            <Ellipse Width="100" Height="100" Fill="White" Opacity="0.15">
                <Ellipse.RenderTransform>
                    <TranslateTransform x:Name="Bokeh1_Transform" X="50" Y="50"/>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="40"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="150" Height="150" Fill="Cyan" Opacity="0.12">
                <Ellipse.RenderTransform>
                    <TranslateTransform x:Name="Bokeh2_Transform" X="300" Y="200"/>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="60"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="80" Height="80" Fill="CadetBlue" Opacity="0.1">
                <Ellipse.RenderTransform>
                    <TranslateTransform x:Name="Bokeh3_Transform" X="600" Y="150"/>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="50"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <!-- TEXT ANIMATION WITH MOVING GRADIENT -->
        <TextBlock x:Name="AnimatedText" FontSize="48" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Opacity="0" Text="Certiflyte" RenderTransformOrigin="0.5,0.5">

            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop x:Name="GradientStop1" Color="Cyan" Offset="0"/>
                    <GradientStop x:Name="GradientStop2" Color="White" Offset="0.5"/>
                    <GradientStop x:Name="GradientStop3" Color="Aquamarine" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>

            <TextBlock.Effect>
                <BlurEffect Radius="10"/>
            </TextBlock.Effect>

            <TextBlock.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1" Duration="0:0:2"/>

                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                             From="0.5" To="1.2" Duration="0:1:0"
                                             AutoReverse="True"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                             From="0.5" To="1.2" Duration="0:1:0"
                                             AutoReverse="True"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </TextBlock.Triggers>
        </TextBlock>

        <!-- LOADING BAR -->
        <Grid VerticalAlignment="Bottom">
            <Border Height="10" CornerRadius="5"
                    HorizontalAlignment="Stretch" Margin="20,0,20,20"
                    Background="Gray" Opacity="0.3"/>
            <Border x:Name="LoadingBarFill" Background="Cyan"
                    Width="0" Height="10" CornerRadius="5"
                    HorizontalAlignment="Left" Margin="20,0,20,20"/>
        </Grid>
    </Grid>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource BokehAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource MovingGradientAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource ProgressBarAnimation}"/>
        </EventTrigger>
    </Window.Triggers>
</Window>
